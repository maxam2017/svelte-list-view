{
	"name": "svelte-list-view",
	"version": "1.0.0",
	"description": "A <ListView /> component for Svelte",
	"repository": "https://github.com/maxam2017/svelte-list-view",
	"author": "maxam2017",
	"license": "MIT",
	"main": "ListView.svelte",
	"svelte": "ListView.svelte",
	"scripts": {
		"dev": "rollup -cw",
		"build": "rollup -c",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. .",
		"prepare": "husky install"
	},
	"keywords": [
		"svelte",
		"svelte-list",
		"svelte-list-view"
	],
	"devDependencies": {
		"eslint": "^8.17.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.0",
		"prettier": "^2.6.2",
		"prettier-plugin-svelte": "^2.7.0",
		"svelte": "^3.48.0",
		"svelte-check": "^2.7.2",
		"tslib": "^2.4.0",
		"typescript": "^4.7.3"
	},
	"lint-staged": {
		"*.js": "eslint --cache --fix",
		"*.{js,css,md}": "prettier --write",
		"*.svelte": "svelte-check --tsconfig ./tsconfig.json"
	}
}
