{
	"name": "svelte-list-view",
	"version": "0.0.1",
	"description": "A <ListView /> component for Svelte",
	"repository": "https://github.com/maxam2017/svelte-list-view",
	"author": "maxam2017",
	"license": "MIT",
	"main": "build/bundle.js",
	"type": "module",
	"svelte": "ListView.svelte",
	"scripts": {
		"package": "svelte-kit package",
		"prepare": "husky install && svelte-kit sync",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. .",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "svelte-kit package && build-storybook"
	},
	"keywords": [
		"svelte",
		"svelte-list",
		"svelte-list-view"
	],
	"devDependencies": {
		"@storybook/addon-essentials": "^6.5.7",
		"@storybook/addon-links": "^6.5.7",
		"@storybook/svelte": "^6.5.7",
		"@sveltejs/kit": "^1.0.0-next.350",
		"@typescript-eslint/eslint-plugin": "^5.27.1",
		"@typescript-eslint/parser": "^5.27.1",
		"eslint": "^8.17.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.0",
		"micromatch": "^4.0.5",
		"prettier": "^2.6.2",
		"prettier-plugin-svelte": "^2.7.0",
		"svelte": "^3.48.0",
		"svelte-check": "^2.7.2",
		"svelte-loader": "^3.1.3",
		"svelte-preprocess": "^4.10.7",
		"svelte2tsx": "^0.5.10",
		"tslib": "^2.4.0",
		"typescript": "^4.7.3"
	},
	"lint-staged": {
		"*.js": "eslint --cache --fix",
		"*.{js,css,md}": "prettier --write",
		"*.svelte": "svelte-check --tsconfig ./tsconfig.json"
	}
}
